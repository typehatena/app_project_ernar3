<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/slide1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="263.28dp"
                android:src="@drawable/ic_first_slide_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="91dp"
                android:fontFamily="@font/montserrat_700"
                android:text="Explore the world easily"
                android:textColor="@color/vey_dark_gray"
                android:textSize="36dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_300"
                android:text="To your desire"
                android:textColor="@color/vey_dark_gray"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="6dp"
                        android:src="@drawable/slide_status_using"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/slide_status_unusing"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/slide_status_unusing"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/slide2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="263.28dp"
                android:src="@drawable/ic_second_slide_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="91dp"
                android:fontFamily="@font/montserrat_700"
                android:text="Reach the unknown spot"
                android:textColor="@color/vey_dark_gray"
                android:textSize="36dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_300"
                android:text="To your destination   "
                android:textColor="@color/vey_dark_gray"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="46dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="6dp"
                        android:src="@drawable/slide_status_unusing"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/slide_status_using"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/slide_status_unusing"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/slide3">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="263.28dp"
                android:src="@drawable/ic_third_slide_img"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="91dp"
                android:fontFamily="@font/montserrat_700"
                android:text="Make connects with explora"
                android:textColor="@color/vey_dark_gray"
                android:textSize="36dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_300"
                android:text="To your dream trip"
                android:textColor="@color/vey_dark_gray"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="6dp"
                        android:src="@drawable/slide_status_unusing"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/slide_status_unusing"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/slide_status_using"
                        tools:ignore="MissingConstraints" />

                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/bttn_go_to_log_in"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="259dp"
                android:background="@drawable/style_button"
                android:theme="@style/button_next"
                android:visibility="gone"/>
        </LinearLayout>
        <Button
            android:id="@+id/bttn_next_slide"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="259dp"
            android:background="@drawable/style_button"
            android:theme="@style/button_next" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>