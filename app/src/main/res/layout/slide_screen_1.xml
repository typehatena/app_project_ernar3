<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="550dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="178.37dp"
            android:src="@drawable/ic_first_slide_img"/>

        <TextView
            android:layout_width="227dp"
            android:layout_height="88dp"
            android:fontFamily="@font/montserrat_700"
            android:text="Explore the world easily"
            android:textColor="@color/vey_dark_gray"
            android:textSize="36dp"
            android:layout_marginTop="95dp"/>

        <TextView
            android:layout_width="164dp"
            android:layout_height="29dp"
            android:fontFamily="@font/montserrat_300"
            android:text="To your desire"
            android:textColor="@color/vey_dark_gray"
            android:textSize="24dp"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="304dp"
            android:layout_height="50dp"
            android:layout_marginTop="36dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="46dp"
                android:layout_height="6dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="6dp"
                    android:src="@drawable/slide_status_using"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="6dp"
                    android:src="@drawable/slide_status_unusing"
                    tools:ignore="MissingConstraints"
                    android:layout_marginLeft="2dp"/>

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="6dp"
                    android:src="@drawable/slide_status_unusing"
                    tools:ignore="MissingConstraints"
                    android:layout_marginLeft="2dp"/>
    
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_next_slide" 
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_next_button"
                android:layout_marginLeft="208dp"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>